    <div class="container">
        <div class="mensaje text-center">
            <img src="../resources/assets/img/undraw_message_sent_1030.svg" alt=""
                width="50%"
                height="50%">
            <p>Grancias por el Mensaje</p>
            <a class="btn btn-success btn-lg" href="register">Registrarse</a>
        </div>
    </div>
    <%- include('partials/footer')%>
